# ----------------------------------------------------------------------
# Create blocks for materials
# ----------------------------------------------------------------------

block 1 volume 1
block 1 name "elastic_domain"

block 2 volume 2
block 2 name "poroelastic_mush"

block 3 volume 3
block 3 name "poroelastic_magma_body"

# ----------------------------------------------------------------------
# Create nodeset for +x boundary
# ----------------------------------------------------------------------
group "boundary_xpos" add node in surface 6
nodeset 1 group boundary_xpos
nodeset 1 name "boundary_xpos"

# ----------------------------------------------------------------------
# Create nodeset for -x boundary
# ----------------------------------------------------------------------
group "boundary_xneg" add node in surface 4
nodeset 2 group boundary_xneg
nodeset 2 name "boundary_xneg"

# ----------------------------------------------------------------------
# Create nodeset for +y boundary
# ----------------------------------------------------------------------
group "boundary_ypos" add node in surface  5
nodeset 3 group boundary_ypos
nodeset 3 name "boundary_ypos"

# ----------------------------------------------------------------------
# Create nodeset for -y boundary
# ----------------------------------------------------------------------
group "boundary_yneg" add node in surface  3
nodeset 4 group boundary_yneg
nodeset 4 name "boundary_yneg"

# ----------------------------------------------------------------------
# Create nodeset for -z boundary
# ----------------------------------------------------------------------
group "boundary_zneg" add node in surface 2
nodeset 5 group boundary_zneg
nodeset 5 name "boundary_zneg"

# ----------------------------------------------------------------------
# Create nodeset for +z boundary
# ----------------------------------------------------------------------
group "boundary_zpos" add node in surface 1
nodeset 6 group boundary_zpos
nodeset 6 name "boundary_zpos"

# -------------------------------------------------------------------------
# Create nodeset for mush zone-domain boundary
# --------------------------------------------------------------------------
group "boundary_mush" add node in surface 7
nodeset 7 group boundary_mush
nodeset 7 name "boundary_mush"

# -------------------------------------------------------------------------
# Create nodeset for magma chamber-mush zone
# boundary
# -------------------------------------------------------------------------
group "boundary_magma" add node in surface 8
nodeset 8 group boundary_magma
nodeset 8 name "boundary_magma"